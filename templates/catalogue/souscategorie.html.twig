{% extends 'base.html.twig' %}


{% block body %}
    <nav aria-label="breadcrumb" class="mt-2">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path("accueil") }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path("categorie", { categorie: sousCategorie.categorie.id }) }}">{{ sousCategorie.categorie.nom }}</a></li>
